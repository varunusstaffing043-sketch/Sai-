public class ATM {
    private double balance;
    private int pin;

    public ATM(double balance, int pin) {
        this.balance = balance;
        this.pin = pin;
    }

    public String checkBalance(int enteredPin) {
        if (enteredPin == pin) {
            return String.format("Your balance is ₹%.2f", balance);
        } else {
            return "Invalid PIN. Access denied.";
        }
    }

    public String deposit(double amount, int enteredPin) {
        if (enteredPin == pin) {
            if (amount <= 0) return "Amount must be positive.";
            balance += amount;
            return String.format("₹%.2f deposited successfully.", amount);
        } else {
            return "Invalid PIN. Deposit failed.";
        }
    }

    public String withdraw(double amount, int enteredPin) {
        if (enteredPin == pin) {
            if (amount <= 0) return "Amount must be positive.";
            if (amount <= balance) {
                balance -= amount;
                return String.format("₹%.2f withdrawn successfully.", amount);
            } else {
                return "Insufficient balance.";
            }
        } else {
            return "Invalid PIN. Withdrawal failed.";
        }
    }

    public static void main(String[] args) {
        ATM myAtm = new ATM(5000, 1234);
        System.out.println(myAtm.checkBalance(1234));     // Correct PIN
        System.out.println(myAtm.deposit(1000, 1234));    // Deposit money
        System.out.println(myAtm.withdraw(2000, 1234));   // Withdraw money
        System.out.println(myAtm.checkBalance(1234));     // Updated balance
    }
}
