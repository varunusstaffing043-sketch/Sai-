class ATM:
    def __init__(self, balance, pin):
        self.__balance = balance   # private variable
        self.__pin = pin           # private variable

    def check_balance(self, entered_pin):
        if entered_pin == self.__pin:
            return f"Your balance is â‚¹{self.__balance}"
        else:
            return "Invalid PIN. Access denied."

    def deposit(self, amount, entered_pin):
        if entered_pin == self.__pin:
            self.__balance += amount
            return f"â‚¹{amount} deposited successfully."
        else:
            return "Invalid PIN. Deposit failed."

    def withdraw(self, amount, entered_pin):
        if entered_pin == self.__pin:
            if amount <= self.__balance:
                self.__balance -= amount
                return f"â‚¹{amount} withdrawn successfully."
            else:
                return "Insufficient balance."
        else:
            return "Invalid PIN. Withdrawal failed."


# ðŸ”„ Real-time usage
my_atm = ATM(5000, 1234)

print(my_atm.check_balance(1234))     # Correct PIN âœ…
print(my_atm.deposit(1000, 1234))     # Deposit money
print(my_atm.withdraw(2000, 1234))    # Withdraw money    # Wrong PIN âŒ
print(my_atm.check_balance(1234))
